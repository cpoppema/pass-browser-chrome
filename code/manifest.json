{
    "author": "Cornelis Poppema",
    "manifest_version": 2,
    "icons": {
        "128": "images/icon-locked-128.png"
    },
    "browser_action": {
        "default_icon": "images/icon-locked-128.png",
        "default_popup": "html/popup.html"
    },
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/content.js"
            ]
        }
    ],
    "permissions": [
        "<all_urls>",
        "clipboardWrite",
        "notifications",
        "storage",
        "tabs"
    ],
    "content_security_policy": "script-src 'self'; object-src 'self'",
    "options_ui": {
        "page": "html/options.html",
        "chrome_style": false
    }
}
